    "/dashboard": {
      "get": {
        "tags": ["Dashboard"],
        "summary": "Get complete dashboard data in one call",
        "description": "Returns all dashboard statistics, recent items (max 5 per list), and chart data. Admin users get system-wide data, regular users get personal data.",
