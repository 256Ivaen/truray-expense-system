                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "first_name": {
                                "type": "string"
                              },
                              "last_name": {
                                "type": "string"
                              },
                              "total_spent": {
                                "type": "number"
                              }
                            }
                          }
                        },
                        "monthly_spending": {
                          "type": "array",
                          "description": "Last 6 months spending data for charts",
                          "maxItems": 6,
                          "items": {
                            "type": "object",
                            "properties": {
                              "month": {
                                "type": "string",
                                "example": "2025-01"
                              },
                              "month_name": {
                                "type": "string",
                                "example": "January 2025"
                              },
                              "total": {
                                "type": "number",
                                "example": 50000
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
