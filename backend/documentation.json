          "200": {
            "description": "Dashboard data retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "stats": {
                          "type": "object",
                          "description": "Overview statistics",
                          "properties": {
                            "total_projects": {
                              "type": "integer",
                              "example": 25
                            },
                            "active_projects": {
                              "type": "integer",
                              "example": 10
                            },
                            "total_users": {
                              "type": "integer",
                              "example": 50
                            },
                            "total_deposits": {
                              "type": "number",
                              "example": 1000000
                            },
                            "total_allocated": {
                              "type": "number",
                              "example": 750000
                            },
                            "total_spent": {
                              "type": "number",
                              "example": 500000
                            },
                            "pending_expenses": {
                              "type": "integer",
                              "example": 15
                            },
                            "budget_utilization": {
                              "type": "number",
                              "example": 50.5
                            }
                          }
                        },
                        "recent_projects": {
                          "type": "array",
                          "description": "Last 5 recent projects",
                          "maxItems": 5,
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string",
                                "format": "uuid"
                              },
                              "project_code": {
                                "type": "string"
                              },
                              "name": {
                                "type": "string"
                              },
                              "status": {
                                "type": "string"
                              },
                              "created_at": {
                                "type": "string",
                                "format": "date-time"
                              }
                            }
                          }
                        },
                        "pending_expenses": {
                          "type": "array",
                          "description": "Last 5 pending expenses",
                          "maxItems": 5,
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "amount": {
                                "type": "number"
                              },
                              "description": {
                                "type": "string"
                              },
                              "status": {
                                "type": "string"
                              },
                              "project_name": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "recent_allocations": {
                          "type": "array",
                          "description": "Last 5 recent allocations",
                          "maxItems": 5,
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "amount": {
                                "type": "number"
                              },
                              "description": {
                                "type": "string"
                              },
                              "status": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "top_spending_users": {
                          "type": "array",
                          "description": "Top 5 users by spending (admin only)",
